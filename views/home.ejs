<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Drag & Drop File Upload</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <style>
        .drop-zone {
            border: 2px dashed #0d6efd;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            background: #f8f9fa;
            transition: 0.3s ease;
            cursor: pointer;
        }

        .drop-zone:hover {
            background-color: #e9f0ff;
        }

        .drop-zone.dragover {
            background-color: #d0e6ff;
            border-color: #0b5ed7;
        }

        .drop-zone p {
            font-size: 1.25rem;
            color: #495057;
        }

        .preview-area {
            margin-top: 20px;
        }

        .preview-area .file-name {
            font-weight: 500;
            color: #212529;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <button type="button" class="btn btn-primary" id="open-popup" onclick="openPopup()"><i class="bi bi-cloud-upload"></i></button>
        <button type="button" class="btn btn-danger" style="display: none;" id="close-popup" onclick="closePopup()"><i class="bi bi-x"></i></button>

        <div class="row mt-5 justify-content-center" style="display: none;" id="popup">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow rounded-4 border-primary">
                    <div class="card-body p-5">
                        <h3 class="mb-4 text-center text-primary">Upload Your File</h3>

                        <form action="/upload" method="post" enctype="multipart/form-data">
                            <!-- Drop Zone -->
                            <div id="drop-zone" class="drop-zone mb-3">
                                <p>Drag & Drop files here<br><small class="text-muted">or click to browse</small></p>
                                <input type="file" id="fileInput" name="file" hidden>
                            </div>

                            <!-- Preview -->
                            <div id="preview" class="preview-area text-center"></div>

                            <div class="d-grid mt-4">
                                <button class="btn btn-primary btn-lg" type="submit">Upload File</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script for drag and drop -->
    <script>
        // Open or close the drag and drop popup
        const btnOpen = document.getElementById('open-popup');
        const btnClose = document.getElementById('close-popup');
        const popup = document.getElementById('popup');

        function openPopup() {
            popup.style.display = 'flex';
            btnOpen.style.display = 'none';
            btnClose.style.display = 'inline';
        }
        function closePopup() {
            popup.style.display = 'none';
            btnOpen.style.display = 'inline';
            btnClose.style.display = 'none';
        }

        const dropZone = document.getElementById("drop-zone");
        const fileInput = document.getElementById("fileInput");
        const preview = document.getElementById("preview");

        dropZone.addEventListener("click", () => fileInput.click());

        dropZone.addEventListener("dragover", (e) => {
            e.preventDefault();
            dropZone.classList.add("dragover");
        });

        dropZone.addEventListener("dragleave", () => {
            dropZone.classList.remove("dragover");
        });

        dropZone.addEventListener("drop", (e) => {
            e.preventDefault();
            dropZone.classList.remove("dragover");
            const files = e.dataTransfer.files;
            fileInput.files = files;
            handleFiles(files);
        });

        fileInput.addEventListener("change", () => {
            handleFiles(fileInput.files);
        });

        function handleFiles(files) {
            preview.innerHTML = '';
            Array.from(files).forEach(file => {
                const div = document.createElement("div");
                div.className = "file-name mt-2";
                div.textContent = `ðŸ“„ ${file.name}`;
                preview.appendChild(div);
            });
        }
    </script>
</body>

</html>